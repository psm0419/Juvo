<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="favorite_mapper">
    <!-- 사용자의 즐겨찾기 주유소 목록 조회 -->
    <select id="getFavoritesByUserId" parameterType="string" resultType="com.app.dto.juyuso.Juyuso">
        SELECT j.*
        FROM juyuso j
        INNER JOIN like_juyuso f ON j.uni_id = f.uni_id
        WHERE f.user_id = #{userId}
    </select>

    <!-- 즐겨찾기 추가 -->
    <insert id="addFavorite" parameterType="com.app.dto.juyuso.LikeJuyuso">
        INSERT INTO like_juyuso (user_id, uni_id)
        VALUES (#{user_id}, #{uni_id})
    </insert>

    <!-- 즐겨찾기 삭제 -->
    <delete id="deleteFavorite" parameterType="com.app.dto.juyuso.LikeJuyuso">
        DELETE FROM like_juyuso
        WHERE user_id = #{user_id} AND uni_id = #{uni_id}
    </delete>

    <!-- 즐겨찾기 존재 여부 확인 -->
    <select id="existsFavorite" parameterType="com.app.dto.juyuso.LikeJuyuso" resultType="int">
        SELECT COUNT(*)
        FROM like_juyuso
        WHERE user_id = #{user_id} AND uni_id = #{uni_id}
    </select>
</mapper> 